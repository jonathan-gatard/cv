---
const stack = [
  {
    title: "Mainframe Core",
    icon: "M",
    color: "text-green-400",
    bg: "bg-green-500/10",
    skills: ["COBOL", "JCL", "CICS", "DB2", "Z/OS"]
  },
  {
    title: "Modern DevOps",
    icon: "D",
    color: "text-blue-400",
    bg: "bg-blue-500/10",
    skills: ["Python", "Git", "TWS / IWS", "Full Stack Web"]
  },
  {
    title: "Tooling & DX",
    icon: "T",
    color: "text-purple-400",
    bg: "bg-purple-500/10",
    skills: ["Zowe", "VSCode", "IBM RDi", "ServiceNow"]
  }
];
---

<section class="py-20 bg-gray-800">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-white">
      Ma Stack Technique
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {stack.map((group) => (
        <div class="bg-gray-900 rounded-xl p-6 shadow-lg border border-gray-700 hover:border-gray-500 transition-all hover:-translate-y-2">
          <div class={`w-12 h-12 rounded-lg flex items-center justify-center text-2xl font-bold mb-4 ${group.bg} ${group.color}`}>
            {group.icon}
          </div>
          <h3 class="text-xl font-bold text-white mb-4">{group.title}</h3>
          
          <div class="flex flex-wrap gap-2">
            {group.skills.map((skill) => (
              <span class="px-3 py-1 bg-gray-800 text-gray-300 text-sm rounded-md border border-gray-700">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
