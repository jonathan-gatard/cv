---
const { lang = 'fr' } = Astro.props;
import { useTranslations } from '../i18n/utils';

const t = useTranslations(lang);
---
<section class="relative h-screen flex flex-col items-center justify-center overflow-hidden bg-gray-900 text-white pt-20 md:pt-0">
  
  <!-- Dynamic Tech Background -->
  <div class="absolute inset-0 z-0">
    <!-- Grid Pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_50%,#000_70%,transparent_100%)]"></div>
    
    <!-- Moving Glows -->
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full mix-blend-screen filter blur-[100px] animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full mix-blend-screen filter blur-[100px] animate-pulse delay-1000"></div>
  </div>

  <div class="relative z-10 text-center px-4 max-w-5xl mx-auto">
    
    <!-- Title -->
    <h1 class="text-4xl md:text-7xl font-extrabold tracking-tight mb-6 md:mb-8 text-white drop-shadow-lg">
      Jonathan Gatard
    </h1>
    
    <h2 class="text-xl md:text-5xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-400 to-cyan-400 mb-6 md:mb-10 pb-2">
      {t('hero.title')}
    </h2>
    
    <!-- Description -->
    <p class="text-base md:text-xl text-gray-300 mb-8 md:mb-12 leading-relaxed max-w-3xl mx-auto bg-gray-900/50 backdrop-blur-sm p-4 md:p-6 rounded-xl border border-gray-800 shadow-2xl">
      {lang === 'fr' ? 'Double comp√©tence' : 'Dual expertise'} <strong>z/OS & Open</strong>. <br class="hidden md:block"/>
      {t('hero.subtitle')}
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 md:gap-5 justify-center items-center">
      <a href={lang === 'fr' ? '/experience' : '/en/experience'} class="px-8 py-4 bg-white text-gray-900 hover:bg-gray-100 rounded-full font-bold shadow-lg shadow-white/10 transition-all transform hover:-translate-y-1 flex items-center gap-3 text-sm tracking-wide">
        {t('hero.cta.journey')}
      </a>
      <a href={lang === 'fr' ? '/passions' : '/en/passions'} class="px-8 py-4 bg-gray-800/50 hover:bg-gray-800 text-gray-300 hover:text-white border border-gray-700 hover:border-gray-500 rounded-full font-medium backdrop-blur-md transition-all flex items-center gap-3 text-sm tracking-wide">
        {t('hero.cta.projects')}
      </a>
    </div>
  </div>
</section>
