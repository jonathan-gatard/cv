    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 group">
        <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-xs font-bold shadow-lg group-hover:shadow-blue-500/50 transition-all">JG</div>
        <span class="font-bold text-gray-200 tracking-tight group-hover:text-white transition-colors">Jonathan Gatard</span>
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center gap-1">
      {navItems.map(item => (
        <a href={item.href} class="px-4 py-2 text-sm font-medium text-gray-300 hover:text-white hover:bg-white/5 rounded-full transition-all">
            {item.label}
        </a>
      ))}
      <div class="w-px h-4 bg-gray-700 mx-2"></div>
      <a href="/cv.pdf" target="_blank" class="px-4 py-2 text-sm font-bold text-blue-400 hover:text-blue-300 hover:bg-blue-500/10 rounded-full transition-all flex items-center gap-2">
