        <span class="sr-only">Menu</span>
        <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
    </button>
  </div>

  <!-- Mobile Dropdown -->
  <div class="hidden max-w-4xl mx-auto mt-2 px-4 md:hidden" id="navbar-default">
      <ul class="flex flex-col p-4 border border-gray-700/50 rounded-2xl bg-gray-900/95 backdrop-blur-xl shadow-2xl space-y-2">
        {navItems.map(item => (
            <li>
                <a href={item.href} class="block py-3 px-4 text-gray-200 rounded-xl hover:bg-gray-800 transition-colors font-medium">
                    {item.label}
                </a>
            </li>
        ))}
